<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/d_5"
    android:weightSum="12">

    <AutoCompleteTextView
        android:text=""
        android:id="@+id/et_TenSanPham"
        android:layout_marginLeft="@dimen/d_10"
        android:background="@drawable/round_xam"
        android:layout_weight="5"
        android:hint="Tên món ăn"
        android:textColorHint="@color/white_gray"
        android:textSize="@dimen/d_14"
        android:paddingLeft="@dimen/d_10"
        android:textColor="@color/black"
        android:layout_width="@dimen/d_0"
        android:layout_height="@dimen/d_40"/>

    <EditText
        android:inputType="number"
        android:text=""
        android:id="@+id/et_SoLuong"
        android:layout_marginLeft="@dimen/d_10"
        android:background="@drawable/round_xam"
        android:layout_weight="4"
        android:hint="Nhập số lượng(gram)"
        android:textColorHint="@color/white_gray"
        android:textSize="@dimen/d_14"
        android:paddingLeft="@dimen/d_10"
        android:textColor="@color/black"
        android:layout_width="@dimen/d_0"
        android:layout_height="@dimen/d_40"/>

    <TextView
        android:layout_marginLeft="@dimen/d_10"
        android:textColorHint="@color/white_xam"
        android:id="@+id/tv_Calo"
        android:paddingRight="@dimen/d_10"
        android:background="@drawable/round_xam"
        android:layout_weight="2"
        android:text="0 calo"
        android:textSize="@dimen/d_13"
        android:paddingLeft="@dimen/d_10"
        android:textColor="@color/black"
        android:layout_width="@dimen/d_0"
        android:layout_height="@dimen/d_40"
        android:gravity="center"/>

    <ImageView
        android:layout_weight="1"
        android:id="@+id/image_remove"
        android:layout_width="@dimen/d_0"
        android:layout_height="@dimen/d_25"
        android:layout_marginRight="@dimen/d_10"
        android:layout_marginLeft="@dimen/d_5"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_close"
        app:tint="@color/black"></ImageView>

</LinearLayout>