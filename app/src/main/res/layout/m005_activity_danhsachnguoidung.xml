<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_heathy3">
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_500"
        android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_listUser"
        android:layout_marginTop="@dimen/d_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_470">
    </androidx.recyclerview.widget.RecyclerView>
     </LinearLayout>
    <Button
        android:layout_margin="@dimen/d_10"
        android:paddingLeft="@dimen/d_20"
        android:paddingRight="@dimen/d_20"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm hồ sơ"
        android:id="@+id/DanhSachNguoiDung"
        android:gravity="center"
        android:layout_gravity="center"/>
</LinearLayout>